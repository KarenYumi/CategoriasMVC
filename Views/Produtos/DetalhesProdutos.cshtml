@model ProdutoViewModel //mesma coisa do q @model CategoriasMVC.Models.ProdutoViewModel

<h3>Detalhes Produto</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome) <!--Exibe o nome da propriedade-->
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome) <!--Exibe o valor d propriedade-->
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImagemUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImagemUrl)
        </dd>
    </dl>
    <div class="row">
        <div class="form-group col-md-6" style="padding-top: 10px">
            @if (string.IsNullOrEmpty(@Model.ImagemUrl))
            {
                <img src="~\Imagens\hamburger-494706_1280.jpg" />
            }
            else
            {
                <img src="@Model.ImagemUrl" />
            }
        </div>
    </div>

    <div class="form-group" style="padding-top: 10px">
        <a asp-action="Index" class="btn btn-info">Retornar</a>
    </div>
</div>